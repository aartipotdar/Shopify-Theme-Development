<!-- /templates/customers/login.liquid -->

<div class="container py-5 my-5">
  <div class="login-form">
    {% form 'customer_login' %}
    {% include 'form-error', form: form %}
    <h1 class="h3">Customer Login</h1>

    <label for="customer_email">Email Address</label>
    <input type="email" name="customer[email]" class="form-control rounded-0 my-2" />

    <label for="customer_password">Password</label>
    <input type="password" name="customer[password]" class="form-control rounded-0 my-2" />

    <input type="submit" value="Sign In" class="btn btn-primary btn-lg w-100 rounded-0" />

    {% endform %}

    <a href="#recover" id="forgotPassword" class="text-center">Forgot password?</a>

    <div id="forgot_password_form" class="forgot-passsword-form d-none">
      {% form 'recover_customer_password' %}

      {% include 'form-error', form: form %}
      <div class="col-12">
        <label for="customer_email">Email Address</label>
        <input class="form-control" id="customer_email" type="email" name="email" />
      </div>

      <input class="btn btn-secondary my-2 rounded-0" type="submit" value="Reset password" />

      {% endform %}
    </div>
  </div>
</div>